{% extends 'base.html.twig' %}

{% block title %}
	{{ page_title }}
{% endblock %}

{% block body %}

	<div class="display-grid">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{ path('app_home') }}">Нүүр хуудас</a>
				</li>

				<li class="breadcrumb-item">
					<a href="{{ path('app_news_index') }}">Мэдээ
					</a>
				</li>


				{% if newsId %}
					<li class="breadcrumb-item">
						<a href="{{ path('app_news_contents',{'id':newsId}) }}">Агуулгууд</a>
					</li>
				{% else %}
					<li class="breadcrumb-item">
						<a href="{{ path('app_content_pdf_index') }}">Мэдээ PDF</a>
					</li>
				{% endif %}


				<li class="breadcrumb-item active" aria-current="page">
					Нэмэх
				</li>
			</ol>
		</nav>
	</div>

	{% include 'layout/flash.html.twig' %}

	{{ form_start(contentPdfForm) }}

	<div class="form-group">
		{{ form_row(contentPdfForm.name) }}
	</div>

	<div class="form-group">
		{{ form_row(contentPdfForm.active) }}
	</div>

	<div class="form-group">
		{{ form_row(contentPdfForm.pdfFile) }}
	</div>

	<div class="form-group">
		{{ form_row(contentPdfForm.priority) }}
	</div>

	<div class="form-group" id="relatedNews">
		{{ form_row(contentPdfForm.News) }}
	</div>

	{{ form_end(contentPdfForm) }}
{% endblock %}


{% block scripts %}
	<script>
		document.addEventListener("DOMContentLoaded", function () {
	var newsId = {{ newsId }}+"";
if (newsId ) {
document.getElementById('relatedNews').style.display = 'none';
}
});
	</script>
{% endblock %}