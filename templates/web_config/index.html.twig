{% extends 'base.html.twig' %}

{% block title %}
	{{ page_title }}
{% endblock %}

{% block body %}

	<div class="card">
		<div class="card-body">
			<div class="display-grid">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home') }}">Нүүр хуудас</a>
						</li>

						<li class="breadcrumb-item">
							Вебийн тохиргоо
						</li>
					</ol>
				</nav>
			</div>
			<br>

			{% include 'layout/flash.html.twig' %}

			<div class="table-responsive">
				<table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Өнгө</th>
							<th>Үсгийн хэмжээ</th>
							<th>Дараалал</th>
							<th>#</th>
						</tr>
					</thead>
					<tbody>
						{% for configForm in configForms %}
							<tr>
								<td>
									{% if configForm.colorCode == '#CD5C5C' %}
										<b style="color: #CD5C5C">Улаан</b>
									{% elseif configForm.colorCode == '#48C9B0' %}
										<b style="color: #48C9B0">ногоон</b>
									{% elseif configForm.colorCode == '#3498DB' %}
										<b style="color: #3498DB">хөх</b>
									{% endif %}
								</td>
								<td>{{ configForm.fontSize}}</td>
								<td>{{ configForm.priority}}</td>
								<td>
									<a href="{{ path('app_web_config_edit', {'id' : configForm.id}) }}" class="btn btn-primary btn-sm">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>
		</div>
	</div>
{% endblock %}
