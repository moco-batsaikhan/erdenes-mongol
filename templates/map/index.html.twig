						</tr>
					</thead>
					<tbody>
						{% for mapData in mapDatas %}
							<tr>
								<td>{{ banner.id }}</td>
								<td>{{ banner.name }}</td>
								<td>{{ banner.information }}</td>
								<td>{{ banner.latitude }}</td>
								<td>{{ banner.longitude }}</td>
								<td>
									<a href="{{ path('app_banner_edit', {'id' : banner.id}) }}" class="btn btn-primary btn-sm">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>

			{# {% if banners|length > 0 %}
