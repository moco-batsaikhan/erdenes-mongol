{% extends 'base.html.twig' %}

{% block title %}
	{{ page_title }}
{% endblock %}

{% block body %}

	<div class="card">
		<div class="card-body">
			<div class="display-grid">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home') }}">Нүүр хуудас</a>
						</li>

						<li class="breadcrumb-item">
							<a>Мэдээ мэдээлэл</a>
						</li>

						<li class="breadcrumb-item">
							ckEditor
						</li>
					</ol>
				</nav>
			</div>

			<div>
				<a href="{{ path('app_content_create_ckeditor') }}" class="btn btn-primary btn-sm">
					+ Шинээр нэмэх</a>
			</div>

			<br>

			{% include 'layout/flash.html.twig' %}

			<div class="table-responsive">
				<table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>№</th>
							<th>Агуулгийн нэр</th>
							<th>Агуулга</th>
							<th>Контентийн дараалал</th>
							<th>Мэдээ</th>

							<th>#</th>
						</tr>
					</thead>
					<tbody>
						{% for content in contents %}
							<tr>
								<td>{{ content.id }}</td>
								<td>{{ content.name }}</td>
								<td>{{ content.body }}</td>
								<td>{{ content.priority}}</td>
								<td>{{ content.getNews.MnTitle }}</td>
								<td>
									<a href="{{ path('app_content_edit', {'id' : content.id}) }}" class="btn btn-primary btn-sm">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>
		</div>
	</div>
{% endblock %}
