{% extends 'base.html.twig' %}

{% block title %}
	{{ page_title }}
{% endblock %}
{% block body %}


	<div class="card">
		<div class="card-body">
			<div class="display-grid">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home') }}">Нүүр хуудас</a>
						</li>

						<li class="breadcrumb-item">
							<a href="{{ path('app_news_index') }}">Мэдээ</a>
						</li>

						<li class="breadcrumb-item active" aria-current="page">
							Засах
						</li>
					</ol>
				</nav>
			</div>

			{% include 'layout/flash.html.twig' %}

			{{ form_start(newsForm) }}

			<div class="form-group">
				{{ form_row(newsForm.mnTitle) }}
			</div>

			<div class="form-group">
				{{ form_row(newsForm.enTitle) }}
			</div>

			<div class="form-group">
				{{ form_row(newsForm.cnTitle) }}
			</div>

			<div class="form-group">
				{{ form_row(newsForm.imageFile) }}
				<a href="{{ asset("uploads/image/" ~ newsForm.vars.value.getImageUrl() ) }}" target="_blank" rel="noopener noreferrer">Зураг харах</a>
			</div>


			<div class="form-group">
				{{ form_row(newsForm.isSpecial) }}
			</div>


			<div class="form-group">
				{{ form_row(newsForm.mnHeadline) }}
			</div>

			<div class="form-group">
				{{ form_row(newsForm.enHeadline) }}
			</div>

			<div class="form-group">
				{{ form_row(newsForm.cnHeadline) }}
			</div>
			
			<div class="form-group">
				{{ form_row(newsForm.active) }}
			</div>
			
			<div class="form-group">
				{{ form_row(newsForm.bodyimageFile) }}
				<a href="{{ asset("uploads/image/" ~ newsForm.vars.value.getBodyImageUrl() ) }}" target="_blank" rel="noopener noreferrer">Зураг харах</a>
			</div>

			{{ form_end(newsForm) }}

		</div>
	</div>

{% endblock %}
