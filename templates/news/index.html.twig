{% extends 'base.html.twig' %}

{% block title %}
	{{ page_title }}
{% endblock %}

{% block body %}

	<div class="card">
		<div class="card-body">
			<div class="display-grid">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home') }}">Нүүр хуудас</a>
						</li>

						<li class="breadcrumb-item">
							<a>Мэдээ мэдээлэл</a>
						</li>
					</ol>
				</nav>
			</div>

			<div>
				<a href="{{ path('app_news_create') }}" class="btn btn-primary btn-sm">
					+ Шинээр нэмэх</a>
			</div>

			<br>

			{% include 'layout/flash.html.twig' %}

			<div class="table-responsive">
				<table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>№</th>
							<th>Гарчиг(Монгол)</th>
							<th>Гарчиг(Англи)</th>
							<th>Гарчиг(Хятад)</th>
							<th>Агуулга эхлэл(Монгол)</th>
							<th>Агуулга эхлэл(Монгол)</th>
							<th>Агуулга эхлэл(Монгол)</th>
							<th>Онцгой</th>
							<th>Төлөв</th>
							<th>Үүсгэсэн хэрэглэгч</th>
							<th>#</th>
						</tr>
					</thead>
					<tbody>
						{% for n in news %}
							<tr>
								<td>{{ n.id }}</td>
								<td>{{ n.mnTitle }}</td>
								<td>{{ n.enTitle }}</td>
								<td>{{ n.cnTitle }}</td>
								<td>
									{% if n.active == true %}
										<b style="color: darkgreen">Энгийн</b>
									{% else %}
										<b style="color: red">Онцгой</b>
									{% endif %}
								</td>
								<td>
									{% if n.active == true %}
										<b style="color: darkgreen">Идэвхитэй</b>
									{% else %}
										<b style="color: red">Идэвхигүй</b>
									{% endif %}
								</td>
								<td>{{ n.mnHeadline }}</td>
								<td>{{ n.enHeadline }}</td>
								<td>{{ n.cnHeadline }}</td>
								<td>{{ n.createdUser }}</td>
								<td>
									<a href="{{ path('app_news_edit', {'id' : n.id}) }}" class="btn btn-primary btn-sm">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</tr>
			</tbody>
		</tbody>
	</table>
</div></div></div>{% endblock %}
