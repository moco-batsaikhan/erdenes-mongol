{% extends 'base.html.twig' %}

{% block title %}
	{{ page_title }}
{% endblock %}

{% block body %}

	<div class="card">
		<div class="card-body">
			<div class="display-grid">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home') }}">Нүүр хуудас</a>
						</li>

						<li class="breadcrumb-item">
							Туслах цэс
						</li>
					</ol>
				</nav>
			</div>

			<div>
				<a href="{{ path('app_sub_category_create') }}" class="btn btn-primary btn-sm">
					+ Шинээр нэмэх</a>
			</div>

			<br>

			{% include 'layout/flash.html.twig' %}

			<div class="table-responsive">
				<table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>№</th>
							<th>Цэс нэр(Монгол)</th>
							<th>Цэс нэр(Англи)</th>
							<th>Цэс нэр(Хятад)</th>
							<th>Төлөв</th>
							<th>Дараалал</th>
							<th>Харьяалагдах үндсэн цэсний нэр</th>
							<th>#</th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<td>{{ category.id }}</td>
								<td>{{ category.mnName }}</td>
								<td>{{ category.enName }}</td>
								<td>{{ category.cnName }}</td>
								<td>
									{% if category.active == true %}
										<b style="color: darkgreen">Идэвхитэй</b>
									{% else %}
										<b style="color: red">Идэвхигүй</b>
									{% endif %}
								</td>
								<td>{{ category.priority}}</td>
								<td>{{ category.getMainCategoryId.MnName}}</td>
								<td>
									<a href="{{ path('app_sub_category_edit', {'id' : category.id}) }}" class="btn btn-primary btn-sm">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</tr>
			</tbody>
		</tbody>
	</table>
</div></div></div>{% endblock %}
