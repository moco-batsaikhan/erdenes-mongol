{% extends 'base.html.twig' %}

{% block title %}
	{{ page_title }}
{% endblock %}
{% block body %}


	<div class="card">
		<div class="card-body">
			<div class="display-grid">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home') }}">Нүүр хуудас</a>
						</li>

						<li class="breadcrumb-item">
							<a href="{{ path('app_contact_index') }}">Холбоо барих</a>
						</li>

						<li class="breadcrumb-item active" aria-current="page">
							Засах
						</li>
					</ol>
				</nav>
			</div>

			{% include 'layout/flash.html.twig' %}

			{{ form_start(contactForm) }}

			<div class="form-group">
				{{ form_row(contactForm.mnAddress) }}
			</div>

			<div class="form-group">
				{{ form_row(contactForm.enAddress) }}
			</div>

			<div class="form-group">
				{{ form_row(contactForm.cnAddress) }}
			</div>

			<div class="form-group">
				{{ form_row(contactForm.email) }}
			</div>


			<div class="form-group">
				{{ form_row(contactForm.phone) }}
			</div>

			<div class="form-group">
				{{ form_row(contactForm.save) }}
			</div>
			{{ form_end(contactForm) }}

		</div>
	</div>

{% endblock %}
