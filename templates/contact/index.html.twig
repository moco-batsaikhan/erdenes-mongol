{% extends 'base.html.twig' %}


{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="display-grid">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home') }}">Нүүр хуудас</a>
						</li>

						<li class="breadcrumb-item">
							Холбоо барих
						</li>
					</ol>
				</nav>
			</div>

			{% include 'layout/flash.html.twig' %}

			<div class="table-responsive">
				<table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Хаяг
							</th>
							<th>И-мэйл
							</th>
							<th>Утас</th>
							<th>#</th>
						</tr>
					</thead>
					<tbody>
						{% for item in data %}
							<tr>
								<td>{{ item.mnAddress}}</td>
								<td>{{ item.email}}</td>
								<td>{{ item.phone}}</td>
								<td>
									<a href="{{ path('app_contact_edit', {'id' : item.id}) }}" class="btn btn-success btn-sm">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>


			{% if data|length > 0 %}
				{% include 'layout/pagination.html.twig' %}
			{% endif %}
		</div>
	</div>
{% endblock %}
