{% extends 'base.html.twig' %}

{% block title %}Hello AboutUsController!
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="display-grid">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home') }}">Нүүр хуудас</a>
						</li>

						<li class="breadcrumb-item">
							Хамт олон
						</li>
					</ol>
				</nav>
			</div>

			<div>
				<a href="{{ path('app_employee_create') }}" class="btn btn-primary btn-sm">
					+ Шинээр нэмэх</a>
			</div>
			<br>

			{% include 'layout/flash.html.twig' %}

			<div class="table-responsive">
				<table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Нэр
							</th>
							<th>Албан тушаал</th>
							<th>Зураг</th>
							<th>И-мэйл
							</th>
							<th>Дугаар</th>
							<th>Алсын хараа(Хятад)</th>
							<th>Алба, хэлтэс
							</th>
							<th>Дараалал</th>
							<th>Уриа үг(Хятад)</th>
							<th>#</th>
						</tr>
					</thead>
					<tbody>
						{% for item in items %}
							<tr>
								<td>{{ item.name}}</td>
								<td>{{ item.division}}</td>
								<td>{{ item.imageUrl}}</td>
								<td>{{ item.email}}</td>
								<td>{{ item.phone}}</td>
								<td>{{ item.department}}</td>
								<td>{{ item.priority}}</td>
								<td>
									<a href="{{ path('app_employee_edit', {'id' : item.id}) }}" class="btn btn-primary btn-sm">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>
			{% if items|length > 0 %}
				{% include 'layout/pagination.html.twig' %}
			{% endif %}
		</div>
	</div>
{% endblock %}
